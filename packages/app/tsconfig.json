{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "lib": ["es2020", "DOM"],
    // "module": "ESNext",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "experimentalDecorators": true
  },
  "include": ["src", "./typings"],
  "compileOnSave": true
}
